<view class='container article-detail'>
  <view class='focus'>
    <image class='focus-bg' src='/images/article/a1.jpg'></image>
    <image 
      catchtap="tapMusic"
      class='focus-music' 
      src="/images/icon/music-stop.png"
    >
    </image>
  </view>
  <view class='head'>
    <image class='avatar' src='/images/avatar/u1.jpg'></image>
    <text class='author'>Tom</text>
    <text class='text'>发表于</text>
    <text class='time'>10天前</text>
  </view>
  <text class='title'>我是文章的标题111</text>
  <view class='operation'>
    <image
      class='operation-collection'
      src='/images/icon/collection.png'>
    </image>
    <image 
      class='operation-share' 
      src='/images/icon/share.png'
    >
    </image>
    <view class='operation-line'></view>    
  </view>
  <text class='content'>我是文章111的内容</text>
</view>
